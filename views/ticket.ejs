<!DOCTYPE html>
<html>
<head>
    <title>Ticket Détails</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <div class="mb-4">
            <a href="/" class="text-blue-500 hover:underline">&larr; Retour</a>
        </div>
        
        <!-- Détails du ticket -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h1 class="text-2xl font-bold mb-2">
                Ticket de <%= ticket.caller %>
            </h1>
            <p class="text-gray-600 mb-4"><%= ticket.reason %></p>
            <div class="flex gap-2 mb-4">
                <% ticket.tags.forEach(tag => { %>
                    <span class="bg-gray-200 px-2 py-1 rounded text-sm">
                        <%= tag %>
                    </span>
                <% }) %>
            </div>
            <p class="text-sm text-gray-500">
                Créé le <%= new Date(ticket.createdAt).toLocaleString() %>
            </p>
        </div>

        <!-- Messages -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-xl font-semibold mb-4">Messages</h2>
            <div class="space-y-4">
                <% ticket.messages.forEach(message => { %>
                    <div class="border-b pb-4">
                        <% if (message.type === 'text') { %>
                            <p><%= message.content %></p>
                        <% } else { %>
                            <img src="<%= message.content %>" alt="Image" 
                                 class="max-w-md rounded">
                        <% } %>
                        <p class="text-sm text-gray-500 mt-2">
                            <%= new Date(message.timestamp).toLocaleString() %>
                        </p>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Formulaires d'ajout -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Ajouter un message</h2>
            
            <!-- Message texte -->
            <form action="/api/tickets/<%= ticket.id %>/messages" method="POST" 
                  class="mb-6">
                <div class="mb-2">
                    <textarea name="content" required
                              class="w-full p-2 border rounded" 
                              placeholder="Votre message"
                              rows="3"></textarea>
                </div>
                <button type="submit" 
                        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Envoyer le message
                </button>
            </form>

            <!-- Upload d'image -->
            <form action="/api/tickets/<%= ticket.id %>/messages" method="POST" 
                  enctype="multipart/form-data"
                  class="border-t pt-6">
                <h3 class="font-medium mb-2">Ajouter une image</h3>
                <div class="mb-2">
                    <input type="file" name="image" accept="image/*" required>
                </div>
                <button type="submit" 
                        class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                    Envoyer l'image
                </button>
            </form>
        </div>
    </div>
</body>
</html>